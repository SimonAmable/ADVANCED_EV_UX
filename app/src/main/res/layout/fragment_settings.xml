<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="false"
    android:background="@color/background"
    android:textAlignment="center"
    android:visibility="visible"
    tools:context=".Settings"
    tools:visibility="visible">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:orientation="vertical">


        <!-- Button 1 with ImageButton -->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <FrameLayout
                android:id="@+id/frameBluetooth"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="@drawable/search_design"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                >
                <ImageButton
                    android:id="@+id/bluetoothImage"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:background="@null"
                    app:tint="@color/white"
                    android:src="@drawable/bluetooth" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button1"
                android:paddingLeft="70dp"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="@drawable/search_design"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-light"
                android:text="BLUETOOTH"
                android:textAlignment="textStart"
                android:textSize="20dp" />
            </FrameLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/frameCharge"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="@drawable/search_design"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                >
                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:background="@null"
                    app:tint="@color/white"
                    android:src="@drawable/charge" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button2"
                    android:paddingLeft="70dp"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:background="@drawable/search_design"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-light"
                    android:text="CHARGE"
                    android:textAlignment="textStart"
                    android:textSize="20dp" />
            </FrameLayout>
        </RelativeLayout>

        <!-- Button 3 with ImageButton -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/frameDisplay"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="@drawable/search_design"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                >
                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:background="@null"
                    app:tint="@color/white"
                    android:src="@drawable/display" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button3"
                    android:paddingLeft="70dp"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:background="@drawable/search_design"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-light"
                    android:text="DISPLAY"
                    android:textAlignment="textStart"
                    android:textSize="20dp" />
            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/frameInformation"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="@drawable/search_design"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                >
                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:background="@null"
                    app:tint="@color/white"
                    android:src="@drawable/information" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button4"
                    android:paddingLeft="70dp"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:background="@drawable/search_design"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-light"
                    android:text="CAR INFORMATION"
                    android:textAlignment="textStart"
                    android:textSize="20dp" />
            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/frameMaintenance"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="@drawable/search_design"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                >
                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:background="@null"
                    app:tint="@color/white"
                    android:src="@drawable/maintanence" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button5"
                    android:paddingLeft="70dp"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:background="@drawable/search_design"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-light"
                    android:text="MAINTENANCE"
                    android:textAlignment="textStart"
                    android:textSize="20dp" />
            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/frameEnergy"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="@drawable/search_design"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                >
                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:background="@null"
                    app:tint="@color/white"
                    android:src="@drawable/energy" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button6"
                    android:paddingLeft="70dp"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:background="@drawable/search_design"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-light"
                    android:text="CAR MAINTENANCE"
                    android:textAlignment="textStart"
                    android:textSize="20dp" />
            </FrameLayout>
        </RelativeLayout>

    </LinearLayout>

    <TextClock
        android:id="@+id/textClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginLeft="160dp"
        android:format24Hour="HH:mm"
        android:format12Hour="hh:mm a"
    />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="307dp"
        android:layout_height="242dp"
        android:layout_marginLeft="50dp"

        android:src="@drawable/cartra" />

</FrameLayout>