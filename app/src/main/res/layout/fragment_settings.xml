<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="false"
    android:background="@color/background"
    android:textAlignment="center"
    android:visibility="visible"
    tools:context=".Settings"
    tools:visibility="visible">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:orientation="vertical">


        <!-- Button 1 with ImageButton -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/transparent"
                android:src="@drawable/bluetooth" />

            <Button
                android:id="@+id/button1"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@id/imageButton1"
                android:background="#00FFFFFF"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-light"
                android:text="BLUETOOTH"
                android:textAlignment="textStart"
                android:textSize="20dp" />
        </RelativeLayout>

        <!-- Repeat the above pattern for Button 2 and Button 3 -->

        <!-- Button 2 with ImageButton -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent">

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/transparent"
                android:src="@drawable/charge"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@id/imageButton2"
                android:background="#00FFFFFF"
                android:fontFamily="sans-serif-light"
                android:text="CHARGE"
                android:textColor="@color/white"
                android:textAlignment="textStart"
                android:textSize="20dp" />
        </RelativeLayout>

        <!-- Button 3 with ImageButton -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/transparent"
                android:src="@drawable/display" />

            <Button
                android:id="@+id/button3"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@id/imageButton3"
                android:background="#00FFFFFF"
                android:fontFamily="sans-serif-light"
                android:text="DISPLAY"
                android:textColor="@color/white"
                android:textAlignment="textStart"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/transparent"
                android:src="@drawable/information" />

            <Button
                android:id="@+id/button4"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@id/imageButton4"
                android:background="#00FFFFFF"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/white"
                android:text="CAR INFORMATION"
                android:textAlignment="textStart"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/transparent"
                android:src="@drawable/maintanence" />


            <Button
                android:id="@+id/button5"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@id/imageButton5"
                android:background="#00FFFFFF"
                android:fontFamily="sans-serif-light"
                android:text="MAINTENANCE"
                android:textColor="@color/white"
                android:textAlignment="textStart"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/transparent"
                android:src="@drawable/energy" />

            <Button
                android:id="@+id/button6"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@id/imageButton6"
                android:background="#00FFFFFF"
                android:fontFamily="sans-serif-light"
                android:text="CAR INFORMATION"
                android:textColor="@color/white"
                android:textAlignment="textStart"
                android:textSize="20dp" />
        </RelativeLayout>

    </LinearLayout>

    <TextClock
        android:id="@+id/textClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginLeft="160dp"
        android:format24Hour="HH:mm"
        android:format12Hour="hh:mm a"
    />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="307dp"
        android:layout_height="242dp"
        android:layout_marginLeft="50dp"

        android:src="@drawable/cartra" />

</FrameLayout>